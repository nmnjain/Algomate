# Environment Configuration for Resume Analysis Backend

# Environment Type (development/production)
ENVIRONMENT=development

# Server Configuration
PORT=8000

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# CORS Configuration (comma-separated origins)
# For development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
# For production (update with your actual domains)
# ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,http://localhost:3000,http://localhost:5173

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_DEBUG=False

# OCR Configuration
TESSERACT_CMD=tesseract  # Path to tesseract executable
TESSERACT_CONFIG=--oem 3 --psm 6

# File Processing
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png

# Logging
LOG_LEVEL=INFO